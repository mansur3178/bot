def greet():
    return 'Привет! Я твой консольный помощник. Введи "help", чтобы узнать команды.'

def help_menu():
    return '''
Команды:
- help: показать команды
- greet: приветствие
- echo <текст>: повторить текст
- calc <a> <b> <op>: посчитать (op = + - * /)
- exit: выйти
'''

def echo(text):
    return text

def calc(a, b, op):
    try:
        a = float(a)
        b = float(b)
    except ValueError:
        return "Ошибка: Введите числа"

    if op == '+':
        return a + b
    elif op == '-':
        return a - b
    elif op == '*':
        return a * b
    elif op == '/':
        if b == 0:
            return "Ошибка: Деление на ноль!"
        return a / b
    else:
        return "Ошибка: неизвестная операция"

def goodbye():
    return "До свидания!"
